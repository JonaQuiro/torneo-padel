<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Resultados de Partidos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/estilos.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 1rem;
      background: #f8f9fa;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-bottom: 2rem;
    }

    form {
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    label, select, input {
      display: block;
      width: 100%;
      margin-bottom: 1rem;
      font-size: 1rem;
    }

    input[type="number"] {
      width: 48%;
      display: inline-block;
    }

    input[type="number"]:first-child {
      margin-right: 4%;
    }

    button {
      background: #007bff;
      color: white;
      border: none;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      border-radius: 8px;
      cursor: pointer;
      width: 100%;
    }

    button:hover {
      background: #0056b3;
    }

    @media screen and (max-width: 600px) {
      input[type="number"] {
        width: 100%;
        margin-bottom: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <h1>Registrar resultados</h1>

  <form action="/resultados" method="POST">
    <label for="partido">Seleccionar partido:</label>
    <select name="partidoId" id="partido" required>
      <% partidos.forEach(p => { %>
        <option value="<%= p.Id %>">
          <%= p.Zona %>: <%= p.Pareja1Jugador1 %> / <%= p.Pareja1Jugador2 %> vs <%= p.Pareja2Jugador1 %> / <%= p.Pareja2Jugador2 %>
        </option>
      <% }) %>
    </select>

    <label>Set 1</label>
    <input type="number" name="Set1P1" min="0" max="7" required>
    <input type="number" name="Set1P2" min="0" max="7" required>

    <label>Set 2</label>
    <input type="number" name="Set2P1" min="0" max="7" required>
    <input type="number" name="Set2P2" min="0" max="7" required>

    <label>Set 3 (opcional)</label>
    <input type="number" name="Set3P1" min="0" max="7">
    <input type="number" name="Set3P2" min="0" max="7">

    <button type="submit">Guardar resultados</button>
  </form>
</body>
</html>
