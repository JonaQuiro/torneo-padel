<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Resultados de Partidos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 1rem;
      background-color: #f4f4f4;
      color: #333;
    }

    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
    }

    th, td {
      border: 1px solid #aaa;
      padding: 0.75rem;
      text-align: center;
    }

    th {
      background-color: #1e88e5;
      color: #fff;
    }

    @media (max-width: 600px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }

      thead tr {
        display: none;
      }

      td {
        position: relative;
        padding-left: 50%;
        border: 1px solid #ccc;
      }

      td::before {
        position: absolute;
        top: 0;
        left: 0;
        width: 45%;
        padding-left: 1rem;
        white-space: nowrap;
        font-weight: bold;
        color: #555;
      }

      td:nth-child(1)::before { content: "Zona"; }
      td:nth-child(2)::before { content: "Pareja 1"; }
      td:nth-child(3)::before { content: "Pareja 2"; }
      td:nth-child(4)::before { content: "Set 1"; }
      td:nth-child(5)::before { content: "Set 2"; }
      td:nth-child(6)::before { content: "Set 3"; }
    }
  </style>
</head>
<body>
  <h1>Resultados de Partidos</h1>
  <table>
    <thead>
      <tr>
        <th>Zona</th>
        <th>Pareja 1</th>
        <th>Pareja 2</th>
        <th>Set 1</th>
        <th>Set 2</th>
        <th>Set 3</th>
      </tr>
    </thead>
    <tbody>
      <% partidos.forEach(p => { %>
        <tr>
          <td><%= p.Zona %></td>
          <td><%= p.Pareja1Jugador1 %> / <%= p.Pareja1Jugador2 %></td>
          <td><%= p.Pareja2Jugador1 %> / <%= p.Pareja2Jugador2 %></td>
          <td><%= p.Set1P1 ?? '-' %> - <%= p.Set1P2 ?? '-' %></td>
          <td><%= p.Set2P1 ?? '-' %> - <%= p.Set2P2 ?? '-' %></td>
          <td><%= p.Set3P1 ?? '-' %> - <%= p.Set3P2 ?? '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
